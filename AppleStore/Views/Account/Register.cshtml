@model AppleStore.Domain.ViewModels.Account.RegisterViewModel

<title>@ViewData["Title"] - AppleStore</title>
<link rel="stylesheet" href="~/css/styles.css" />

<div style="padding: 20px;"></div>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-controller="Account" asp-action="Register">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Name" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Enter your account name" type="text"/>
                        <label class="form-label" for="form3Example3">   Account</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input  asp-for="Password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Enter password"  type="password"/>
                        <label class="form-label" for="form3Example4">   Password</label>
                    </div>

                    <!-- Password confirm -->
                    <div class="form-outline mb-3">
                        <input asp-for="PasswordConfirm" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Confirm password"  type="password"/>
                        <label class="form-label" for="form3Example4">   Confirm Password</label>
                    </div>



                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button class="btn btn-success btn-lg float-right" type="submit">Register</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

</section>
